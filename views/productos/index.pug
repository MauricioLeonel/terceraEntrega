doctype html
html(lang="en")
  head
    title prueba
    style
      include ../estilos/index.css
  body
    h1 Vista de Productos con PUG
    //- button(id="")
    unless data2[0]
      .sinElementos
        h3 No se encontraron productos
    if data2[0]
      .contenedor
        div
          h3 Titulo
          each val in data2
            .elementos
              p(id="codigo")= val.nombre + '-' + val.codigo
              p= val.descripcion
              p= val.precio
              p= val.foto
              //- p=
              //- img(src=val.thumbnail)
              button(id='agregar') agregar

    a(href="/logout") cerrar sesion
    include carrito/index.pug 
    script(src='../script/scriptproductos.js')